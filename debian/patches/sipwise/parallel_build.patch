+cmd_CC_lock=while true; do ( flock -n 9 || exit 95; \
+	$(cmd_CC); \
+	) 9> $@.lock; exitcode=$$?; test $$exitcode = 95 || break; sleep 1; \
+	test -e $@ && exit 0; done; \
+	rm -f $@.lock; exit $$exitcode
+cmd_LD_lock=while true; do ( flock -n 9 || exit 95; \
+	$(cmd_LD); \
+	) 9> $@.lock; exitcode=$$?; test $$exitcode = 95 || break; sleep 1; \
+	test -e $@ && exit 0; done; \
+	rm -f $@.lock; exit $$exitcode
+
+
